<h1><%= @upload.title %></h1>
<p><%= image_tag @upload.image.url %></p>

<div class="form-actions">
	<div class="pull-right">
		Views: <%= @upload.views %>
	</div>
	<%= link_to "Back", uploads_path, :class => 'btn' %>
	<% if user_signed_in? %>
		<%= link_to "Edit", edit_upload_path(@upload), :class => 'btn' %>
		<%= link_to "Delete", upload_path(@upload), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
	<% end %>
</div>