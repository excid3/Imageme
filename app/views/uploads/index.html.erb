<h1>Uploads</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
  <% @uploads.each do |upload| -%>
    <tr>
      <td><%= link_to image_tag(upload.image.url(:thumb)), upload_path(upload) %></td>
      <td>
        <%= link_to "Show", upload_path(upload) %>
        <%= link_to "Edit", edit_upload_path(upload) %>
        <%= link_to "Destroy", upload_path(upload), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to "New", new_upload_path, :class => 'btn btn-primary' %>
<% end %>
